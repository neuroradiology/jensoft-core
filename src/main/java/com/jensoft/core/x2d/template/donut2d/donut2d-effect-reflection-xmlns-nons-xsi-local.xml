<view2d xmlns="http://www.jensoft.org/jensoft/schema/x2d"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jensoft.org/jensoft/schema/x2d 
							../../lang/x2d.xsd">
	<view-key>donut2d effect reflection</view-key>
	<api-key>a996d69d-97b9-4dc6-9815-405dbba71f3b</api-key>
	<width>600</width>
	<height>400</height>
	<west>10</west>
	<east>10</east>
	<north>10</north>
	<south>10</south>
	<window2d xsi:type="Window2DLinear">
		<id>id</id>
		<name>donut2d window</name>		
		<theme-color>
			<r>0</r>
			<g>0</g>
			<b>0</b>
			<a>255</a>
		</theme-color>
		<plugin xsi:type="Donut2DPlugin">
			<donut2d>
				<name>donut2d</name>
				<x>0</x>
				<y>0</y>
				<inner-radius>90</inner-radius>
				<outer-radius>140</outer-radius>
				<start-angle>20</start-angle>
				<nature>user</nature>
				<effect xsi:type="Donut2DReflectionEffect"/>
				<slice>
					<name>slice1</name>
					<value>45</value>
					<divergence>10</divergence>
					<slice-color>
						<r>240</r>
						<g>240</g>
						<b>240</b>
						<a>255</a>
					</slice-color>
				</slice>
				<slice>
					<name>slice2</name>
					<value>5</value>
					<divergence>0</divergence>
					<slice-color>
						<r>236</r>
						<g>216</g>
						<b>59</b>
						<a>255</a>
					</slice-color>
				</slice>
				<slice>
					<name>slice3</name>
					<value>30</value>
					<divergence>0</divergence>
					<slice-color>
						<r>156</r>
						<g>210</g>
						<b>62</b>
						<a>255</a>
					</slice-color>
				</slice>
				<slice>
					<name>slice4</name>
					<value>20</value>
					<divergence>0</divergence>
					<slice-color>
						<r>83</r>
						<g>122</g>
						<b>177</b>
						<a>255</a>
					</slice-color>
				</slice>
			</donut2d>
		</plugin>
		<min-x>-1</min-x>
		<max-x>1</max-x>
		<min-y>-1</min-y>
		<max-y>1</max-y>
	</window2d>
</view2d>
