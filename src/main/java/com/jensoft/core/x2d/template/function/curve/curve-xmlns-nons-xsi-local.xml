<view2d xmlns="http://www.jensoft.org/jensoft/schema/x2d"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jensoft.org/jensoft/schema/x2d 
							../../../lang/x2d.xsd">

	<view-key>simple curve</view-key>
	<api-key>a996d69d-97b9-4dc6-9815-405dbba71f3b</api-key>
	<width>600</width>
	<height>400</height>
	<west>10</west>
	<east>10</east>
	<north>10</north>
	<south>10</south>
	<window2d xsi:type="Window2DLinear">
		<id>id</id>
		<name>curve window</name>
		<theme-color>
			<r>0</r>
			<g>0</g>
			<b>0</b>
			<a>255</a>
		</theme-color>
		<plugin xsi:type="TranslatePlugin" />
		<plugin xsi:type="ZoomWheelPlugin" />
		<plugin xsi:type="ZoomBoxPlugin" />
		<plugin xsi:type="ZoomObjectifPlugin" />
		<plugin xsi:type="OutlinePlugin">
			<outline-color>
				<r>0</r>
				<g>0</g>
				<b>0</b>
				<a>255</a>
			</outline-color>
		</plugin>
		<plugin xsi:type="CurvePlugin">
			<curve-function>
				<name>my curve</name>
				<theme-color>
					<r>0</r>
					<g>0</g>
					<b>0</b>
					<a>255</a>
				</theme-color>
				<source-function xsi:type="InterpolateSourceFunction">
					<name>my source 1</name>
					<id>id1</id>
					<source-x>0 1 2 3 4 5.2 6 7 8 9 10</source-x>
					<source-y>3 1 5 4 4.8 7.3 2 3 7 10 6</source-y>
					<delta>0.1</delta>
				</source-function>
				<curve-draw xsi:type="CurveDefaultDraw">
					<color>
						<r>255</r>
						<g>255</g>
						<b>255</b>
						<a>255</a>
					</color>
					<stroke>
						<width>1.2</width>
					</stroke>
				</curve-draw>
				<glyph>
					<x-value>2.6</x-value>
					<text>myGlyph</text>
					<divergence>10</divergence>
					<style>tangent</style>
					<color-1>
						<r>0</r>
						<g>0</g>
						<b>0</b>
						<a>255</a>
					</color-1>
					<color-2>
						<r>0</r>
						<g>0</g>
						<b>0</b>
						<a>255</a>
					</color-2>
					<marker xsi:type="RoundGlyphMarker">
						<radius>4</radius>
						<fill-color>
							<r>0</r>
							<g>0</g>
							<b>0</b>
							<a>255</a>
						</fill-color>
						<draw-color>
							<r>0</r>
							<g>0</g>
							<b>0</b>
							<a>255</a>
						</draw-color>
					</marker>
				</glyph>
			</curve-function>

		</plugin>
		<min-x>-1</min-x>
		<max-x>10</max-x>
		<min-y>-4</min-y>
		<max-y>18</max-y>
	</window2d>
</view2d>
